<view id="js-page-wrap">
  <view
    class="notice-bar-wrap-placeholder"
  />

  <view
    class="notice-bar-wrap"
  >
    <view class="notice-bar-content">
      <view class="notice-bar-text">以下商品可使用<text class="height-light">{{couponTypeDesc}}</text>优惠券</view>
      <wr-icon
        class="notice-bar-icon"
        name="question"
        size="{{32}}"
        color="#AAAAAA"
        bind:tap="openStoreList"
      />
    </view>
  </view>

  <wr-goods-list
    goods-list="{{goods}}"
    layout="vertical"
    wr-class="goods-list-wrap"

    bind:click="goodClickHandle"
    bind:addcart="cardClickHandle"
  />


  <!-- 弹层 -->
  <wr-popup
    isIcon="{{true}}"
    fixed="{{true}}"
    show="{{showStoreInfoList}}"
    position="bottom"
    bind:close="closeStoreList"
  >

    <view class="popup-content-wrap">
      <view class="popup-content-title">
        规则详情
        <wr-icon
          wr-class="close-icon"
          name="close"
          size="25"
          bind:tap="closeStoreList"
        />
      </view>

      <view class="desc-group-wrap">
        <view
          wx:if="{{detail && detail.timeLimit}}"
          class="item-wrap"
        >
          <view class="item-title">优惠券有效时间</view>
          <view class="item-label">{{detail.timeLimit}}</view>
        </view>

        <view
          wx:if="{{detail && detail.desc}}"
          class="item-wrap"
        >
          <view class="item-title">优惠券说明</view>
          <view class="item-label">{{detail.desc}}</view>
        </view>

        <view
          wx:if="{{detail && detail.useNotes}}"
          class="item-wrap"
        >
          <view class="item-title">使用须知</view>
          <view class="item-label">{{detail.useNotes}}</view>
        </view>
      </view>
    </view>
  </wr-popup>
</view>