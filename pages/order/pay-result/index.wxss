/* var() css变量适配*/
@import '../../../style/goodsList.wxss';
page {
  background-color: #f5f5f5;
  min-height: 100%;
}
page .navigation-bar__btn {
  display: inline-block;
  vertical-align: middle;
}
page .navigation-bar__btn_goback {
  color: #fff;
}
page .navigation-bar__btn_goback:active {
  opacity: 0.5;
}
.navbar-bg .nav-back,
.navbar-bg .page-background {
  background: linear-gradient(
    to right,
    rgba(250, 85, 15, 1) 0%,
    rgba(250, 85, 15, 0.6) 100%
  ) !important;
  background: linear-gradient(
    to right,
    rgba(var(--color-primary-rgb, 250, 85, 15), 1) 0%,
    rgba(var(--color-primary-rgb, 250, 85, 15), 0.6) 100%
  ) !important;
}
.pay-status {
  text-align: center;
  padding-top: 32rpx;
  height: 380rpx;
  background: linear-gradient(
    to right,
    rgba(250, 85, 15, 1) 0%,
    rgba(250, 85, 15, 0.6) 100%
  ) !important;
  background: linear-gradient(
    to right,
    rgba(var(--color-primary-rgb, 250, 85, 15), 1) 0%,
    rgba(var(--color-primary-rgb, 250, 85, 15), 0.6) 100%
  ) !important;
  color: #ffffff;
}
.pay-status__text {
  font-size: 48rpx;
  line-height: 66rpx;
  margin-left: 14rpx;
  font-weight: bold;
}
.pay-status__info {
  font-size: 28rpx;
  line-height: 40rpx;
  margin-top: 20rpx;
}
.pay-status__info .total-price {
  margin-left: 20rpx;
  font-weight: bold;
}
.pay-status__info .total-price .symbol,
.pay-status__info .total-price .pprice .decimal {
  font-size: 36rpx;
  line-height: 50rpx;
}
.pay-status__info .total-price .pprice .integer {
  font-size: 48rpx;
  line-height: 66rpx;
}
.pay-status__oper {
  margin-top: 80rpx;
}
.pay-status__oper__btn {
  width: 326rpx;
  height: 76rpx;
  display: inline-block;
  border-radius: 8rpx;
  margin: 15rpx;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 80rpx;
  border: 2rpx solid #ffffff;
}
.pay-ad {
  padding: 20rpx 0 40rpx 0;
  margin: 0 auto;
}
.pay-ad__img {
  width: 750rpx;
  height: 182rpx;
}
.pay-lottery {
  padding: 20rpx 0;
  width: 100%;
}
.groupon-view {
  margin: 20rpx auto;
}
.nav-actions {
  display: flex;
  margin-top: 40rpx;
  width: 641rpx;
  box-sizing: border-box;
}
.nav-actions .space {
  height: 80rpx;
  width: 1rpx;
}
.nav-actions .nav-button {
  width: 306rpx;
  height: 80rpx;
  line-height: 8rpx;
  text-align: center;
  color: #fa550f;
  color: var(--color-primary, #fa550f);
  font-size: 32rpx;
  line-height: 80rpx;
  position: relative;
}
.nav-actions .nav-button::after {
  content: ' ';
  position: absolute;
  border: 1rpx solid #fa550f;
  border: 1rpx solid var(--color-primary, #fa550f);
  border-radius: 8rpx;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  opacity: 0.99;
}
