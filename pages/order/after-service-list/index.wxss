@import '/miniprogram_npm/@tencent/retailwe-ui-order-goods-card/external.wxss';

:host {
  background-color: #f5f5f5;
}

.page-container .tab-bar__placeholder,
.page-container .tab-bar__inner {
  height: 88rpx;
  line-height: 88rpx;
}

.page-container .tab-bar__inner {
  font-size: 26rpx;
  color: #333333;
  position: fixed;
  width: 100vw;
  top: 0;
  left: 0;
}

.page-container .tab-bar__inner.order-nav .order-nav-item .bottom-line {
  bottom: 12rpx;
}

.page-container .tab-bar__active {
  font-size: 28rpx;
}

.page-container .specs-popup .bottom-btn {
  color: #fa550f;
  color: var(--color-primary, #fa550f);
}

.page-container .specs-popup .bottom-btn::after {
  border-color: #fa550f;
  border-color: var(--color-primary, #fa550f);
}

.dialog .dialog__button-confirm {
  color: #fa550f;
  color: var(--color-primary, #fa550f);
}

.list-loading {
  height: 100rpx;
}

.empty-wrapper {
  height: calc(100vh - 88rpx);
}

.btn-bar {
  margin-top: 20rpx;
}

.load-more {
  margin: 0 24rpx;
}

wr-order-goods-card:not(:first-child) .wr-goods-card {
  margin-top: 40rpx;
}

.price-total {
  font-size: 24rpx;
  color: #666666;
  padding-top: 10rpx;
}

.price-total .float {
  float: right;
}

.price-total .symbol {
  font-size: 24rpx;
  color: #fa550f;
  color: var(--color-price, #fa550f);
  font-weight: bold;
  display: inline;
  margin-right: 5rpx;
}

.price-total .order-price {
  font-size: 32rpx;
  color: #fa550f;
  color: var(--color-price, #fa550f);
  font-weight: bold;
}

.price-total .order-price__decimal {
  font-size: 24rpx;
}

.price-total .clear {
  clear: both;
}

.page-container
  .order-goods-card
  > wr-goods-card
  .wr-goods-card__bottom
  .price {
  top: 100rpx;
  left: 10rpx;
}

.page-container .order-goods-card > wr-goods-card .wr-goods-card__num {
  top: 100rpx;
}

.page-container
  .order-goods-card
  > wr-goods-card
  .wr-goods-card__bottom
  .price::before {
  display: inline;
  content: '退款金额:';
  margin-right: 1em;
  font-size: 24rpx;
  color: #333333;
  font-weight: normal;
}

.page-container .wr-goods-card__specs {
  margin: 14rpx 20rpx 0 0;
}

.page-container .order-goods-card > wr-goods-card .wr-goods-card__title {
  margin-right: 0;
  -webkit-line-clamp: 1;
}

.page-container .order-card .header .store-name {
  -webkit-line-clamp: 1;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
  width: 80%;
}

.page-container .status-desc {
  box-sizing: border-box;
  padding: 22rpx 20rpx;
  font-size: 26rpx;
  line-height: 1.3;
  text-align: left;
  color: #333333;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  word-wrap: break-word;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
}

.page-container .header__right {
  font-size: 24rpx;
  color: #333333;
  display: flex;
  align-items: center;
}

.page-container .header__right__icon {
  color: #d05b27;
  font-size: 16px !important;
  margin-right: 10rpx;
}
