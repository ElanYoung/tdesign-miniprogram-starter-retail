<view class="receipt">
  <view class="cell-title">
    <view class="flex head">
      <view class="head-title">发票</view>
      <view class="btn-wrap">
        <view bindtap="onLabels" data-item="{{item}}" class="btn {{receiptIndex === index ? 'active-btn' : ''}}" wx:for="{{receipts}}" wx:for-item="item" wx:key="index">
          {{item.title}}
        </view>
      </view>
    </view>
  </view>
  <block wx:if="{{receiptIndex === 1}}">
    <view class="receipt-content">
      <view class="addressTags flex">
        <view class="head-title">发票抬头</view>
        <view class="btn-wrap">
          <view class="btn {{addressTagsIndex === index ? 'active-btn':'' }}" bindtap="onLabels" data-item="{{tag}}" wx:for="{{addressTags}}" wx:for-item="tag" wx:key="index">
            {{tag.title}}
          </view>
        </view>
      </view>
      <view class="line"></view>
      <view class="receipt-input">
        <text class="title">{{addressTagsIndex === 0 ? '姓名':'公司名称'}}</text>
        <input class="input-com" value="{{addressTagsIndex === 0 ? name:componentName}}" placeholder-class="input-placeholder" bindinput="onInput" data-item="name" type="" placeholder="{{addressTagsIndex === 0 ? '请输入您的姓名':'请输入公司名称'}}" />
      </view>
      <view class="line"></view>
      <view class="receipt-input">
        <text class="title">{{addressTagsIndex === 0 ? '手机号':'识别号'}}</text>
        <input class="input-com" value="{{addressTagsIndex === 0 ? phone:code}}" placeholder-class="input-placeholder" bindinput="onInput" data-item="code" type="" placeholder="{{addressTagsIndex === 0 ? '请输入您的手机号':'请输入纳税人识别号'}}" />
        <wr-icon wx:if="{{addressTagsIndex === 1}}" name="question" bindtap="onKnoeCode"></wr-icon>
      </view>
      <view class="line"></view>
      <view class="receipt-input">
        <text class="title">电子邮箱</text>
        <input class="input-com" value="{{email}}" placeholder-class="input-placeholder" bindinput="onInput" data-item="email" type="" placeholder="请输入邮箱用于接收电子发票" />
      </view>
      <view class="line"></view>
    </view>
    <view class="receipt-info">
      <view class="flex info-con">
        <view class="head-title">发票内容</view>
        <view class="btn-wrap">
          <view class="btn {{goodsClassesIndex ===index ? 'active-btn':''}}" bindtap="onLabels" data-item="{{good}}" wx:for="{{goodsClasses}}" wx:for-item="good" wx:key="index">
            {{good.title}}
          </view>
        </view>
      </view>
      <view class="title">发票内容将显示详细商品名称与价格信息，发票金额为实际支付金额，不包含优惠等扣减金额</view>
    </view>
    <view class="receipt-know" bindtap="onDialogTap">
      发票须知
      <view class="wr wr-question icon"></view>
    </view>
    <wr-dialog title="{{codeShow ? '纳税人识别号说明':'发票须知'}}" bindconfirm="onDialogTap" class="dialog-receipt" show="{{dialogShow}}" confirmButtonText="我知道了">
      <view class="srcoll-view-wrap">
        <scroll-view class="dialog-info" scroll-x="{{false}}" scroll-y="{{true}}">
          <view class="info-wrap">
            <view class="info" wx:if="{{!codeShow}}">
              <view class="title" wx:for="{{invoiceInfo.info}}" wx:key="index" wx:for-item="item">
                {{item}}
              </view>
            </view>
            <view class="info" wx:else>
              <view class="title" wx:for="{{invoiceInfo.codeTitle}}" wx:key="index" wx:for-item="item">
                {{item}}
              </view>
            </view>
          </view>
        </scroll-view>
      </view>
    </wr-dialog>
  </block>
  <view wx:else></view>
  <view class="safe-area-bottom receipt-btn">
    <button class="receipt-btn-con" bindtap="onSure">确定</button>
  </view>
</view>

<wr-toast id="wr-toast"/>
<wr-dialog id="wr-dialog"/>
