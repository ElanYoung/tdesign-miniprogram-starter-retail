
.popup-content {
  background-color: white;
  color: #222427;
  border-radius: 20rpx 20rpx 0 0;
  overflow: hidden;
}

.popup-content .header {
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    vertical-align: middle;
    font-size: 32rpx;
    font-weight: bold;
    position: relative;
}

