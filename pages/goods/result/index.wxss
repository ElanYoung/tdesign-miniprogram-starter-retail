/* var() css变量适配*/
@import '../list/index.wxss';
page {
  background-color: #fff;
}

.result-container {
  display: block;
}

.t-search {
  padding: 0 30rpx;
  background-color: #fff;
}

.t-class__input-container {
  height: 64rpx !important;
  border-radius: 32rpx !important;
}

.t-search__left-icon {
  display: flex;
  align-items: center;
}

.t-search__input {
  font-size: 28rpx !important;
  color: rgb(116, 116, 116) !important;
}

.category-goods-list {
  background-color: #f2f2f2;
  overflow-y: scroll;
  padding: 20rpx 24rpx;
}

.wr-goods-list {
  background: #f2f2f2 !important;
}

.t-image__mask {
  display: flex !important;
}

.category-recommend {
  width: 100%;
  position: relative;
  z-index: 100;
  margin-top: 300px;
  background: #f5f5f5;
}
.recommend-wrap {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}
.recommend-line {
  width: 103px;
  height: 5px;
}
.recommend-text {
  font-size: 14px;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #4f5356;
}
.filter-wrap {
  position: relative;
}
.ipt-wrap {
  width: 100%;
  height: 44px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  background: #ffffff;
  position: relative;
  z-index: 100;
}
.ipt-box {
  width: 301px;
  height: 32px;
  position: relative;
  border-radius: 16px;
  background: #ffffff;
  border: 1px solid #dddddd;
  display: flex;
  align-items: center;
}
.search-big {
  width: 16px;
  height: 16px;
  position: absolute;
  left: 10px;
  color: #bbbbbb;
}
.search-ipt {
  width: 237px;
  height: 32px;
  margin-left: 34px;
  color: #333;
  font-size: 14px;
}
.search-delete {
  width: 16px;
  height: 16px;
  position: absolute;
  right: 10px;
}
.cancel-btn {
  font-size: 14px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
}
.search-val {
  position: absolute;
  left: 34px;
  font-size: 12px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  padding: 3px 5px;
  border-radius: 15px;
  background: #f3f3f3;
}
.empty-wrap {
  margin-top: 184rpx;
  margin-bottom: 120rpx;
  height: 300rpx;
}
.empty-wrap .empty-tips .empty-content .content-text {
  margin-top: 40rpx;
}

.filter-wrap .filter-left-content .filter-active-item {
  color: #fa550f !important;
  color: var(--color-primary, #fa550f) !important;
}
.con2 .price-ipts-wrap .price-ipt.focus {
  border: 1px solid #fa550f !important;
  border: 1px solid var(--color-primary, #fa550f) !important;
}
.con2 .price-btns-wrap .btn-reset {
  color: #fa550f !important;
  color: var(--color-primary, #fa550f) !important;
}
.con2 .price-btns-wrap .btn-confirm {
  background-color: #fa550f !important;
  background-color: var(--color-primary, #fa550f) !important;
}
.wr-info {
  background-color: #fa550f !important;
  background-color: var(--color-primary, #fa550f) !important;
}

.rec-good-list {
  --ui-goods-card-height: 650rpx;
}

.price-ipts-wrap {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-top: 24rpx;
}
.price-ipts-wrap .price-divided {
  position: relative;
  width: 22rpx;
  padding: 0 20rpx;
}

.price-ipts-wrap .price-divided::after {
  content: '';
  position: absolute;
  height: 2rpx;
  width: 22rpx;
  background-color: #222427;
  top: 50%;
  left: 20rpx;
  transform: translateY(-50%);
}

.result-container .price-ipts-wrap .price-ipt {
  box-sizing: border-box;
  width: 256rpx;
  font-size: 24rpx;
  text-align: center;
  border-radius: 8rpx;
  color: #bbb;
  background: rgba(245, 245, 245, 1);
}

.price-ipts-wrap .price-divided .price-ipt.active {
  color: #333;
  font-weight: 600;
}
