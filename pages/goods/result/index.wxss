/* var() css变量适配*/
@import '../list/index.wxss';
page {
  background-color: #f5f5f5;
}
.result-container .search-component {
  background-color: #fff;
  padding: 0 30rpx;
}
.category-goods-list {
  background-color: #f5f5f5;
  overflow-y: scroll;
}
.category-recommend {
  width: 100%;
  position: relative;
  z-index: 100;
  margin-top: 300px;
  background: #f5f5f5;
}
.recommend-wrap {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}
.recommend-line {
  width: 103px;
  height: 5px;
}
.recommend-text {
  font-size: 14px;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #4f5356;
}
.filter-wrap {
  position: relative;
}
.ipt-wrap {
  width: 100%;
  height: 44px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  background: #ffffff;
  position: relative;
  z-index: 100;
}
.ipt-box {
  width: 301px;
  height: 32px;
  position: relative;
  border-radius: 16px;
  background: #ffffff;
  border: 1px solid #dddddd;
  display: flex;
  align-items: center;
}
.search-big {
  width: 16px;
  height: 16px;
  position: absolute;
  left: 10px;
  color: #bbbbbb;
}
.search-ipt {
  width: 237px;
  height: 32px;
  margin-left: 34px;
  color: #333;
  font-size: 14px;
}
.search-delete {
  width: 16px;
  height: 16px;
  position: absolute;
  right: 10px;
}
.cancel-btn {
  font-size: 14px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
}
.search-val {
  position: absolute;
  left: 34px;
  font-size: 12px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  padding: 3px 5px;
  border-radius: 15px;
  background: #f3f3f3;
}
.empty-wrap {
  margin-top: 184rpx;
  margin-bottom: 120rpx;
  height: 300rpx;
}
.empty-wrap .empty-tips .empty-content .content-text {
  margin-top: 40rpx;
}
.no-more {
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.search-component .input-box {
  caret-color: #fa550f !important;
  caret-color: var(--color-primary, #fa550f) !important;
}
.search-component .input-box.focus {
  border: 2rpx solid #fa550f !important;
  border: 2rpx solid var(--color-primary, #fa550f) !important;
}
.filter-wrap .filter-left-content .filter-active-item {
  color: #fa550f !important;
  color: var(--color-primary, #fa550f) !important;
}
.con2 .price-ipts-wrap .price-ipt.focus {
  border: 1px solid #fa550f !important;
  border: 1px solid var(--color-primary, #fa550f) !important;
}
.con2 .price-btns-wrap .btn-reset {
  color: #fa550f !important;
  color: var(--color-primary, #fa550f) !important;
}
.con2 .price-btns-wrap .btn-confirm {
  background-color: #fa550f !important;
  background-color: var(--color-primary, #fa550f) !important;
}
.wr-info {
  background-color: #fa550f !important;
  background-color: var(--color-primary, #fa550f) !important;
}
