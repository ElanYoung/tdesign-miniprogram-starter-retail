<wr-navbar title="评价商品" homePath="/supermarket/pages/home/home/home" back="{{ false }}">
    <wr-icon slot="left" wr-class="navigation-back" name="left" color="#333" size="30rpx" bindtap="onBackTap" />
  </wr-navbar>
  <view class="page-container">
    <view wx:for="{{ commentList }}" class="{{ 'sku-comment-' + index }}" wx:key="skuId">
      <sku-comment data-field="{{ 'commentList[' + index + ']' }}" data="{{ item }}" bindchange="onFieldChange" />
    </view>
    <view wx:if="{{ commentList.length }}" class="store-comment">
      <view class="{{isFinished ? 'finished-icon-wrap title' : 'title'}}">
        物流服务评价
        <wr-icon name="yilingqu"  wx:if="{{isFinished}}" color="#979797" classPrefix="ym" wr-class="finished-icon" size="98" />
      </view>
      <!-- <block wx:if="{{isFinished}}">
        <image class="finishedIcon" src="{{finishedIcon}}" />
      </block> -->
      <block wx:if="{{!isFinished}}">
        <view class="rate">
          <text class="label">物流评价</text>
          <wr-rate value="{{ freightScore }}" data-field="freightScore" bind:change="onFieldChange" gap="{{12}}" size="{{32}}" touchable />
        </view>
        <view class="rate">
          <text class="label">服务评价</text>
          <wr-rate value="{{ serviceScore }}" data-field="serviceScore" bind:change="onFieldChange" gap="{{12}}" size="{{32}}" touchable />
        </view>
      </block>
    </view>
    <view wx:if="{{ commentList.length }}" class="submmit-bar">
      <wr-button loading="{{ submmiting }}" bindtap="onSubmmitComment" wr-class="submmit-bar-button" type="{{ !dirty || error ? 'disabled' : 'primary' }}" block>
        提交评价
      </wr-button>
    </view>
  </view>