page {
  background-color: #f5f5f5;
}
.price-container {
  padding: 24rpx;
  height: 100vh;
  background-color: #fff;
}

.price-between {
  font-size: 26rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.price-ipts-wrap {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-top: 24rpx;
}
.price-ipts-wrap .price-divided {
  position: relative;
  width: 22rpx;
  padding: 0 20rpx;
}
.price-ipts-wrap .price-divided::after {
  content: '';
  position: absolute;
  height: 2rpx;
  width: 22rpx;
  background-color: #222427;
  top: 50%;
  left: 20rpx;
  transform: translateY(-50%);
}
.price-ipts-wrap .price-ipt {
  box-sizing: border-box;
  width: 256rpx;
  height: 60rpx;
  font-size: 24rpx;
  text-align: center;
  border-radius: 8rpx;
  color: #bbb;
  background: rgba(245, 245, 245, 1);
}
.price-ipts-wrap .price-divided .price-ipt.focus {
  border: 1px solid #fa550f;
}
.price-ipts-wrap .price-divided .price-ipt.active {
  color: #333;
  font-weight: 600;
}
