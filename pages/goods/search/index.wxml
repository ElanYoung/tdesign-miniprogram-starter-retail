<!-- miniprogram/pages/search/search/search.wxml -->
<view class="search-page">
  <wr-search actionText="取消" bind:submit="handleSubmit"></wr-search>
  <view class="search-wrap">
    <!-- 历史搜索 -->
    <view class="history-wrap" wx:if="{{searchWords.length}}">
      <view class="search-header">
        <text class="history">历史搜索</text>
        <wr-icon name="trash" color='rgba(187,187,187,1)' size='34' class="ipt-delete" bind:tap="handleClearHistory"></wr-icon>
      </view>
      <view class="history-content">
        <view class="history-item" hover-class="hover-history-item" wx:for="{{searchWords}}" bind:tap="handleHistoryTap" bindlongpress="deleteCurr" data-index="{{index}}" wx:key="*this">
          {{item}}
        </view>
      </view>
    </view>
  </view>
  <!-- 提示框 -->
  <wr-dialog show="{{dialogShow}}" message="{{dialog.message}}" bindconfirm="confirm" showCancelButton="{{dialog.showCancelButton}}"></wr-dialog>
</view>
