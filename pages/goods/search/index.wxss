/* miniprogram/pages/search/search/search.wxss */
.search-page {
  box-sizing: border-box;
  width: 100vw;
  height: 100vh;
  padding: 0 30rpx;
}

.search {
  padding: 0 24rpx;
  margin-top: 10rpx;
  background-color: #fff;
}

.t-search > view {
  background-color: #fff;
}

.t-search__left-icon {
  display: flex;
  align-items: center;
}

.t-search__input {
  color: rgb(116, 116, 116) !important;
}


.search-wrap {
  margin-top: 44rpx;
}

.search-header {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
}

.history-content {
  overflow: hidden;
  display: flex;
  flex-flow: row wrap;
  justify-content: flex-start;
  align-items: flex-start;
  margin-top: 24rpx;
}

.history {
  font-size: 30rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: rgba(51, 51, 51, 1);
  line-height: 42rpx;
}

.ipt-delete {
  width: 32rpx;
  height: 32rpx;
}

.history-item {
  float: left;
  color: #333;
  font-size: 24rpx;
  font-weight: 400;
  padding: 14rpx 20rpx;
  margin: 0 26rpx 24rpx 0;
  border-radius: 8rpx;
  background: #f5f5f5;
  max-width: 250rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.history-wrap {
  margin-bottom: 20px;
}

.hover-history-item {
  position: relative;
  top: 3rpx;
  left: 3rpx;
  box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.1) inset;
}
