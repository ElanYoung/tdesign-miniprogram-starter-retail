page {
  box-sizing: border-box;
  padding-bottom: 140rpx;
}

.search {
  padding: 0 24rpx;
  margin-top: 10rpx;
  background-color: #fff;
}

.t-class__input-container {
  height: 64rpx !important;
}

.t-search__left-icon {
  display: flex;
  align-items: center;
}

.t-search__input {
  font-size: 28rpx !important;
  color: rgb(116, 116, 116) !important;
}

.t-image {
  width: 702rpx;
  height: 160rpx;
}

.t-tabs {
  margin: 20rpx 0;
}

.t-tabs .t-tabs-nav {
  background-color: transparent;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #333;
}

.t-tabs .t-tabs-is-active {
  color: #fa550f !important;
}

.t-tabs .t-tabs-track {
  background-color: #fa550f !important;
}

.t-tabs .t-tabs-scroll {
  border: none !important;
}

