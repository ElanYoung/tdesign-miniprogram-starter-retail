<view style="text-align: center;" wx:if="{{pageLoading}}">
	<t-loading
	 theme="circular"
	 size="40rpx"
	 loading
	 style="color: #ddd"
	>
		<span slot="text">加载中...</span>
	</t-loading>
</view>
<view class="search" bind:tap="navToSearchPage">
	<t-search
	 t-class="t-search"
	 t-class-left="t-search__left-icon"
	 t-class-input="t-search__input"
	 center
	 shape="round"
	 keyword="{{keyword}}"
	 wr-class="search"
	/>
</view>
<view style="padding: 0 24rpx;margin-top: 10rpx;">
	<t-swiper
	 t-class="swiper-wrap"
	 current="{{current}}"
	 autoplay="{{autoplay}}"
	 duration="{{duration}}"
	 interval="{{interval}}"
	 navigation
	>
		<t-swiper-item
		 wx:for="{{imgSrcs}}"
		 wx:for-item="item"
		 wx:for-index="index"
		 wx:key="index"
		>
			<t-image src="{{item}}" t-class="swipe-img" bind:tap="navToActivityDetail" />
		</t-swiper-item>
	</t-swiper>
</view>
<view style="text-align: center;margin-top: 20rpx;" bind:tap="navToActivityDetail">
	<t-image src="{{activityImg}}" t-class="t-image" lazy-load="{{true}}" />
</view>
<t-tabs t-class="t-tabs" value="{{0}}" bind:change="tabChangeHandle">
	<t-tab-panel
	 wx:for="{{tabList}}"
	 wx:for-index="index"
	 wx:key="index"
	 label="{{item.text}}"
	 value="{{item.index}}"
	/>
</t-tabs>
<view style="text-align: center;" wx:if="{{goodsRefreshing}}">
	<t-loading
	 theme="circular"
	 size="40rpx"
	 loading
	 style="color: #ddd"
	>
		<span slot="text">加载中...</span>
	</t-loading>
</view>
<goods-list
 goodsList="{{goodsList}}"
 layout="vertical"
 bind:click="goodlistClickHandle"
 bind:addcart="goodlistAddCartHandle"
/>
<wr-load-more list-is-empty="{{!goodsList.length}}" status="{{goodsListLoadStatus}}" bind:retry="onReTry" />
<t-toast id="t-toast" />
<t-dialog id="t-dialog" />

