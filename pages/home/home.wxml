<view style="text-align: center" wx:if="{{pageLoading}}">

	<t-loading
	 theme="circular"
	 size="40rpx"
	 loading
	 t-class-indicator="t-class-indicator"
	>
		<span slot="text">加载中...</span>
	</t-loading>
</view>
<view class="home-page-container">
	<view class="search" bind:tap="navToSearchPage">
		<t-search
		 t-class-left="t-search__left-icon"
		 t-class-input="t-search__input"
		 t-class-input-container="t-class__input-container"
		 placeholder="iphone 13 火热发售中"
		/>
	</view>
	<t-swiper
	 t-class="swiper-wrap"
	 current="{{current}}"
	 autoplay="{{autoplay}}"
	 duration="{{duration}}"
	 interval="{{interval}}"
	 navigation
	>
		<t-swiper-item
		 wx:for="{{imgSrcs}}"
		 wx:for-item="item"
		 wx:for-index="index"
		 wx:key="index"
		>
			<t-image src="{{item}}" t-class="swipe-img" bind:tap="navToActivityDetail" />
		</t-swiper-item>
	</t-swiper>
	<t-tabs
	 t-class="t-tabs"
	 t-class-active="t-class-item"
	 t-class-track="t-class-track"
	 defaultValue="{{0}}"
	 bind:change="tabChangeHandle"
	>
		<t-tab-panel
		 wx:for="{{tabList}}"
		 wx:for-index="index"
		 wx:key="index"
		 label="{{item.text}}"
		 value="{{item.key}}"
		/>
	</t-tabs>
	<goods-list
	 wr-class="goods-list-container"
	 goodsList="{{goodsList}}"
	 layout="vertical"
	 bind:click="goodListClickHandle"
	 bind:addcart="goodListAddCartHandle"
	 bind:tag="tagClickHandle"
	/>
	<t-load-more list-is-empty="{{!goodsList.length}}" status="{{goodsListLoadStatus}}" bind:retry="onReTry" />
	<t-toast id="t-toast" />
</view>

