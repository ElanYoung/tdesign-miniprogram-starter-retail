<view
  id="{{independentID}}"
  class="t-goods-card {{ layout }} {{ centered ? 'center' : ''}}"
  bind:tap="clickHandle"
  data-goods="{{ goods }}"
>
	<view class="t-goods-card__main">
		<view class="t-goods-card__thumb" bind:tap="clickThumbHandle">
			<t-image
			  wx:if="{{ !!goods.thumb && !goods.hideKey.thumb }}"
			  src="{{ goods.thumb }}"
			  t-class="t-goods-card__img"
			  mode="{{ thumbMode }}"
			  lazy-load="{{ lazyLoad }}"
			/>
		</view>
		<view class="t-goods-card__body">
			<view class="t-goods-card__long_content">
				<view wx:if="{{ goods.title && !goods.hideKey.title }}" class="t-goods-card__title">
					{{ goods.title }}
				</view>
				<view wx:if="{{ goods.tags && !goods.hideKey.tags && !!goods.tags.length }}" class="t-goods-card__tags">
					<view
					  wx:for="{{ goods.tags }}"
					  wx:key="index"
					  wx:for-item="tag"
					  data-index="{{index}}"
					  class="t-goods-card__tag"
					>
						{{tag}}
					</view>
				</view>
			</view>
			<view class="t-goods-card__short_content">
				<view wx:if="{{ goods.price && !goods.hideKey.price }}" class="t-goods-card__price">
					<t-price
					  wr-class="spec-for-price"
					  symbol-class="spec-for-symbol"
					  symbol="{{currency}}"
					  price="{{goods.price}}"
					  fill="{{priceFill}}"
					/>
				</view>
				<view wx:if="{{ goods.originPrice && !goods.hideKey.originPrice && isValidityLinePrice }}" class="t-goods-card__origin-price">
					<t-price
					  symbol="{{currency}}"
					  price="{{goods.originPrice}}"
					  fill="{{priceFill}}"
					  type="delthrough"
					/>
				</view>
				<view wx:if="{{goods.num && !goods.hideKey.num}}" class="t-goods-card__num">
					<text class="t-goods-card__num__prefix">x </text>
					{{ goods.num }}</view>
				<t-icon
				  prefix="wr"
				  name="cartAdd"
				  id="{{independentID}}-cart"
				  data-id="{{independentID}}"
				  class="t-goods-card__add-cart"
				  catchtap="addCartHandle"
				  size="48rpx"
				  color="#FA550F"
				/>
			</view>
		</view>
	</view>
</view>

