<view class="goods-list-wrap wr-class {{layout}}" id="{{independentID}}">
	<block wx:for="{{goodsList}}" wx:for-item="item" wx:key="index">
		<goods-card
		  id="{{independentID}}-gd-{{index}}"
		  layout="{{layout}}"
		  data="{{item}}"
		  currency="{{item.currency || 'Â¥'}}"
		  price-fill="{{!!priceFill}}"
		  lazy-load="{{lazyLoad}}"
		  centered="{{layout.indexOf('horizontal') > -1}}"
		  thumb-mode="aspectFill"
		  thresholds="{{thresholds}}"
		  class="goods-card-inside"
		  data-index="{{index}}"
		  bind:thumb="onClickGoodsThumb"
		  bind:specs="onClickGoodsSpecs"
		  bind:click="onClickGoods"
		  bind:add-cart="onAddCart"
		  bind:ob="onOB"
		/>
	</block>
</view>

